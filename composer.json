{
	"name": "wp-jazz/composer-wp-pro-plugins",
	"description": "Composer Installer for commercial WordPress Plugins.",
	"type": "composer-plugin",
	"license": "MIT",
	"require": {
		"composer-plugin-api": "^1.0 || ^2.0",
		"composer/semver": "^1.0 || ^2.0 || ^3.0",
		"vlucas/phpdotenv": "^3.0 || ^4.0 || ^5.0"
	},
	"require-dev": {
		"composer/composer": "^1.0.0 || ^2.0.0",
		"phpstan/phpstan": "^1.10"
	},
	"replace": {
		"junaidbhura/composer-wp-pro-plugins": "*"
	},
	"authors": [
		{
			"name": "Junaid Bhura",
			"email": "info@junaidbhura.com",
			"role": "Former lead"
		},
		{
			"name": "Chauncey McAskill",
			"email": "chauncey@mcaskill.ca",
			"role": "Current lead"
		},
		{
			"name" : "Contributors",
			"homepage" : "https://github.com/wp-jazz/composer-wp-pro-plugins/graphs/contributors"
		}
	],
	"autoload": {
		"psr-4": {
			"Junaidbhura\\Composer\\WPProPlugins\\": "src/"
		}
	},
	"extra": {
		"class": "Junaidbhura\\Composer\\WPProPlugins\\Installer",
		"plugin-modifies-downloads": true
	},
	"scripts": {
		"lint": [
			"@lint:phpstan"
		],
		"lint:phpstan": "phpstan analyse"
	},
	"scripts-descriptions": {
		"lint:phpstan": "Run static code analysis with PHPStan"
	}
}
